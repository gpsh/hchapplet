/* pages/shop/shop.wxss */
.contaner {
    /* text-align: center; */
    height: auto;
    width: 100%;
    /* overflow: hidden; */
    background: #f0f0f0;
}

.header-block {
    width: 100%;
    height: 350rpx;
}

.header-bar {
    width: 680rpx;
    height: 80rpx;
    background: #fafafa;
    padding: 10rpx 20rpx;
    margin: 0 auto;
    top: 30rpx;
    z-index: 8;
    position: relative;
    border-radius: 8rpx;
}

.header-bar .map-button {
    font-size: 28rpx;
    color: #666;
    padding: 10rpx 20rpx;
    position: absolute;
    left: 0;
    width: 135rpx;
    z-index: 9;
}

.header-bar .section {
    width: 545rpx;
    height: auto;
    right: 0;
    position: absolute;
    padding: 5rpx;
}

.header-bar .section input {
    border-left: 2px solid #e0e0e0;
    width: 100%;
    height: auto;
    padding: 0 0 0 80rpx;
    font-weight: lighter;
    font-size: 24rpx;
}

.header-bar .section  image {
    display: block;
    position: absolute;
    width: 60rpx;
    height: 60rpx;
    z-index: 9;
}

.header-bar .section  image.serch {
    top: 15rpx;
    left: 30rpx;
    width: 26rpx;
    height: 26rpx;
}

.header-bar .section  image.mike {
    top: 10rpx;
    right: 30rpx;
    width: 26rpx;
    height: 34rpx;
}

.swiper-index {
    width: 100%;
    height: 350rpx;
    position: absolute;
    top: 0;
}

.swiper-index .slide-image {
    width: 100%;
    height: 350rpx;
}
.header-slogan{
    width: 100%;
    padding: 40rpx 24rpx 30rpx 24rpx;
    color: #333;
    font-size: 30rpx;
    background-color: #fff;
    text-align: justify;
    border-bottom: #f0f0f0 solid 1rpx;
}
.header-address{
    position: relative;
    width: 100%;
    padding: 30rpx 24rpx;
    color: #333;
    font-size: 30rpx;
    background-color: #fff;
    border-bottom: #f0f0f0 solid 1rpx;
}
.header-address .icon-address{
    width: 30rpx;
    height: 32rpx;
    display: inline-block;
    vertical-align: middle;
}
.header-address .text-address{
    width: 672rpx;
    padding-left: 20rpx;
    display: inline-block;
    vertical-align: middle;
}
.header-address .fix-btn{
    position: absolute;
    display: block;
    width: 180rpx;
    height: 60rpx;
    right: 24rpx;
    font-size: 28rpx;
    color: #fff;
    background-color: #03c285;
    top: 20rpx;
    text-align: center;
    line-height: 60rpx;
}
/* tab模块 */
.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    margin-top: 20rpx;
    background-color: #fff;
}
.swiper-tab-item{
    width: 50%; 
    color: #777;
    font-size: 30rpx;
}
.active{
    color:#333;
    font-size: 30rpx;
    position: relative;
    /* border-bottom: 4rpx solid #F65959; */
}
.active .iconbot{
    position: absolute;
    width: 90rpx;
    height: 6rpx;
    background-color: #ff6e61;
    bottom: 0rpx;
    left: 140rpx;
}
  .tabswiper{
    height: 768rpx;
    overflow: hidden;
}  
.tabswiper .ul .li{
    width: 100%;
    padding: 30rpx 24rpx;
    background-color: #fff;
    margin-top: 20rpx;
}
.tabswiper .ul .li:first-child{
    margin-top: 0;
}
.tabswiper .ul .li .list-img{
    width:250rpx;
    height: 180rpx;
    border-radius: 5rpx;
    display: inline-block;
    vertical-align: middle;
}
.tabswiper .ul .li .list-bar{
    display: inline-block;
    vertical-align: middle;
    width: 452rpx;
    padding-left: 20rpx;
}
.tabswiper .list-bar .title{
    color: #333;
    font-size: 28rpx;
    display: block;
}
.tabswiper .list-bar .label{
    color: #999;
    font-size: 24rpx;
    display: block;
    padding: 15rpx 0;
}
.tabswiper .list-bar .price{
    color: #ff6e61;
    font-size: 30rpx;
    display: block;
}
.tabswiper .list-bar .price .org-p{
    color: #ccc;
    font-size: 20rpx;
    text-decoration: line-through;
    margin-left: 20rpx;
}