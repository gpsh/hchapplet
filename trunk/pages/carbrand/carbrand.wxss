/* 页面滑动效果 */

page, .page {
    height: 100%;
    font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
}

/*页面顶层导航列表  */

.page-bottom {
    height: 100%;
    width: 70%;
    right: -70%;
    position: fixed;
    background-color: rgb(255, 255, 255);
    z-index: 0;
    transition: All 0.4s ease;
    -webkit-transition: All 0.4s ease;
}

.page-bottom .page-content {
    overflow-y: scroll;
    overflow: auto;
}

.page-list {
    color: #000;
    padding: 30rpx 0 30rpx 40rpx;
}

/*页面底层展示层  */

.page-top {
    position: relative;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 100%;
    background-color: rgb(255, 255, 255);
    z-index: 0;
    transition: All 0.4s ease;
    -webkit-transition: All 0.4s ease;
}
.overfool-none{
    overflow-y: visible;
    overflow: hidden;
}

.page-state {
    transform: rotate(0deg) scale(1) translate(-100%, 0%);
    -webkit-transform: rotate(0deg) scale(1) translate(-100%, 0%);
    transition: All 0.4s ease;
    -webkit-transition: All 0.4s ease;
    box-shadow: -10rpx 5rpx 30rpx rgba(0, 0, 0, 0.3);
    z-index: 999;
    overflow-y: scroll;
    overflow: auto;
}

.imgw {
    width: 100%;
}

/*右侧列表按钮  */

.page-top .left-nav {
    position: fixed;
    width: 68rpx;
    height: 38rpx;
    left: 20rpx;
    bottom: 20rpx;
    color: #000;
}

/*底层遮罩层  */

.page-mask {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: rgba(200, 200, 200, 0.5);
    z-index: 998;
}

.page-mask-show {
    display: none;
}

/* 页面样式 */

.contant {
    background-color: #f1f1f1;
    /* overflow: hidden; */
    width: 100%;
    height: auto;
}

.border-top {
    border-top: 1px solid #f1f1f1;
}

.contant .list-ul {
    width: 100%;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.contant .list-ul .list-li {
    font-size: 30rpx;
    color: #333;
    height: 88rpx;
    padding: 0 24rpx;
    line-height: 88rpx;
    border-top: 1px solid #f1f1f1;
}

.contant .list-ul .list-li:active {
    background-color: #f1f1f1;
}

.list-ul .img {
    display: inline-block;
    vertical-align: top;
    width: 68rpx;
    height: 68rpx;
    margin-right: 50rpx;
    margin-top: 6rpx;
}

.list-ul .text {
    display: inline-block;
    vertical-align: top;
}
