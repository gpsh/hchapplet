page{
    width: 100%;
    height: 100%;
    background-color: #f1f1f1;
}

.contant{
    background-color: #f1f1f1;
    overflow: hidden;
    width: 100%;
    height: 100%;
}
.header-bar{
    width: 100%;
    height: 150rpx;
    padding: 30rpx 24rpx;
    background-color: #ffffff;
}
.header-bar .img{
    display: inline-block;
    vertical-align: top;
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}
.header-bar .herder-text{
    display: inline-block;
    vertical-align: top;
    width: 600rpx;
    height: 90rpx;
    padding: 0 24rpx;
}
.header-bar .herder-text .title{
    display: block;
    width: 100%;
    color: #333333;
    font-size: 30rpx;
}
.header-bar .herder-text text{
    color: #666666;
    font-size: 24rpx;
    margin-right: 30rpx;
}
.contant .list-ul{
    width: 100%;
    background-color: #ffffff;
}
.contant .list-ul .list-li{
    font-size: 30rpx;
    color: #333333;
    height: 88rpx;
    padding: 0 24rpx;
    line-height: 88rpx;
    border-top: 1px solid #f1f1f1;
    position: relative;
}
.contant .list-ul .list-li:active{
    background-color: #f1f1f1;
}
.list-ul .img{
    display: inline-block;
    vertical-align: top;
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
    margin-top: 30rpx; 
}
.list-ul .text{
    display: inline-block;
    vertical-align: top;
}
.border-top{
    border-top: 1px solid #f1f1f1; 
}
.btn-buttom{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 88rpx;
}
.btn-buttom button{
    color: #333333;
    font-size: 30rpx;
    line-height: 88rpx;
    background-color: #ffffff;
}
.icon-jian{
    position: absolute;
    right: 30rpx;
    width: 24rpx;
    height: 24rpx;
    top: 30rpx;
}
.icon-top{
    top: 60rpx;
}


/* 非会员 */
.no-vip .header-img{
    width: 100%;
    position: relative;
}
.no-vip .header-img .bg-img{
    width: 100%;
    height: 298rpx;
}
.no-vip .cont{
    position: absolute;
    width: 100%;
    text-align: center;
    padding-top: 60rpx; 
    top: 0;
}
.no-vip .cont .header-img{
    display: block;
    width: 90rpx;
    height: 90rpx;
    margin-left: 330rpx;
}
.no-vip .cont .text{
    display: block;
    color: #333333;
    font-size: 30rpx;
    margin-top: 60rpx;
}