page,.page {
  height: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
}
/*左侧导航列表  */
.page-bottom{
  height: 100%;
  width: 70%;
  right:-70%;
  position: fixed; 
  background-color: rgb(255, 255, 255);
  z-index: 0;
   transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
}
.page-list{
  color:#000;
  padding: 30rpx 0 30rpx 40rpx;
}

/*右侧展示层  */
.page-top{
  position: relative;
  top: 0;
  left:0;
  width: 750rpx;
  height: 100%;
  background-color: rgb(255, 255, 255);
  z-index: 0;
  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
}

.page-state{
  transform: rotate(0deg) scale(1) translate(-100%,0%); 
  -webkit-transform: rotate(0deg) scale(1) translate(-100%,0%); 
   transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
  box-shadow: -10rpx 5rpx 30rpx rgba(0, 0, 0, 0.3);
  z-index: 999
}
.imgw{width:100%;}

/*右侧列表按钮  */
.page-top .left-nav{
  position: fixed;
  width: 68rpx;
  height: 38rpx;
  left: 20rpx;
  bottom: 20rpx;
  color: #000
}

/*右侧遮罩层  */
.page-mask{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(200,200,200,0.5);
  z-index: 998;
}
.page-mask-show{
  display: none;
}