.contener{
    display: block;
    width: 100%;
    height: auto;
    background-color: #f1f1f1;
    overflow: hidden;
}
.upload-img{
    width: 100%;
    padding: 12rpx 13rpx;
    overflow: hidden;
    background-color: #ffffff;
    margin-bottom: 20rpx;
}
.upload-img .img-bar{
    width: 162rpx;
    height: 162rpx;
    margin: 10rpx 10rpx;
    float: left;
    position: relative;
}
.upload-img .img-bar.img-add{
    background-color: #f1f1f1;
    text-align: center;
    padding: 20rpx;
}
.upload-img .img-bar image{
    width: 100%;
    height: 162rpx;
}
.upload-img .img-add image{
    width: 80rpx;
    height: 70rpx;
    margin-top: 10rpx;
}
.upload-img .img-add text{
    display: block;
    width: 100%;
    color: #000000;
    font-size: 24rpx;
}
.upload-img .delete-img-icon{
    display: block;
    width: 24rpx;
    height: 24rpx;
    position: absolute;
    right: 0;
    top: 0;
    padding: 4rpx;
    background: rgba(0, 0, 0, .5);
}
.upload-img .delete-img-icon image{
    width: 18rpx;
    height: 18rpx;
    display: block
}
/* 发布车辆 */
.viewul{
    width: 100%;
    height: auto;
    overflow: hidden;
    background-color: #ffffff;
    margin-bottom: 20rpx;
}
.viewul .viewli{
    width: 100%;
    height: 88rpx;
    padding: 0 24rpx;
    /* line-height: 88rpx; */
    font-size: 30rpx;
    color: #333;
    border-bottom: 1rpx solid #f1f1f1;
}
.viewul .viewli text{
    display: inline-block;
    vertical-align: top;
    width: 160rpx;
    height: auto;
    line-height: 88rpx;
}
.viewul .viewli .viewli-lable{
    display: inline-block;
    vertical-align: top;
    font-size: 24rpx;
    padding-right: 54rpx;
    position: relative;
    height: 88rpx;
    width: 542rpx;
}
.viewul .viewli .viewli-lable input{
    display: block;
    height: 88rpx;
    width: 100%;
    line-height: 88rpx;
    text-align: right;
}
.viewul .viewli .viewli-lable .picker{
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: right;
}
.viewul .viewli image{
    display: block;
    position: absolute;
    width: 24rpx;
    height: 24rpx;
    right: 0;
    top: 30rpx;
}
/* 车辆配置 */
.carconfigure{
    width: 100%;
    height: auto;
    padding: 20rpx 24rpx;
    margin-bottom: 20rpx;
    background-color: #ffffff;
}
.carconfigure .carconfigure-text{
    font-size: 30rpx;
    color: #000000;
    display: block;
    width: 100%;
    padding-bottom: 20rpx;
}
.carconfigure textarea{
    width: 100%;
    height: 130rpx;
    padding: 15rpx;
    border: 1rpx solid #f1f1f1;
    border-radius: 10rpx;
    font-size: 24rpx;
}
.btn-submit{
    background-color: #ff6e61;
    height: 88rpx;
    line-height: 88rpx;
    color: #ffffff;
    font-size: 30rpx;
}