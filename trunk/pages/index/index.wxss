/**index.wxss**/
.contaner{
  /* text-align: center; */
  height: auto; 
  width: 100%;
  /* overflow: hidden; */
  background: #f0f0f0; 
}
.header-block{
  width: 100%;
  height: 350rpx;
}
.header-bar{
  width: 680rpx;
  height:80rpx;
  background: #fafafa; 
  padding:10rpx 20rpx;
  margin: 0 auto;
  top: 30rpx;
  z-index: 8;
  position: relative;
  border-radius: 8rpx; 
}
.header-bar .map-button{
  font-size: 28rpx;
  color: #666666;
  padding: 10rpx 20rpx; 
  position: absolute;
  left: 0;
  width:135rpx;
  z-index: 9
}
.header-bar .section{
  width: 100%;
  height: auto;
  left: 0;
  position: absolute;
  padding: 5rpx
}
.header-bar .section input{
  /* border-left: 2px solid #e0e0e0; */
  width: 100%;
  height: auto;
  padding: 0 0 0 70rpx;
  font-weight: lighter;
  font-size: 24rpx;
}
.header-bar .section  image{
  display: block;
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  z-index: 9
}
.header-bar .section  image.serch{
  top: 18rpx;
  left: 30rpx;
  width: 26rpx;
  height: 26rpx;
}
.header-bar .section  image.mike{
  top: 0rpx;
  right: 0rpx;
  width: 75rpx;
  padding: 7px 12px;
  height: 64rpx;
  border-left: 2rpx solid #cccccc
}

.swiper-index{
   width: 100%;
   height: 350rpx; 
   position: absolute;
   top: 0
} 
.swiper-index .slide-image{
  width:100%;
  height: 350rpx; 
} 
/* 中间内容区-车标表格 */
.content-carBar{
  width: 100%;
  padding-bottom: 20rpx;
}
.content-carBar .carBar-ul{
  width: 100%;
  height: auto;
  background-color: #ffffff;
  padding: 20rpx 0;
  text-align: center;
  overflow: hidden;
}
.content-carBar .carBar-li{
  float: left;
  width: 20%;
  height: auto;
  text-align: center;
  padding: 20rpx 0;
}
.content-carBar .carBar-li image{
  display: block;
  height: 70rpx;
  width: 70rpx;
  margin: 0 auto;
}
.content-carBar .carBar-li label{
  display: block;
  height: 50rpx;
  width: 100%;
  font-size: 28rpx;
  color: #666666;
  margin-top: 15rpx
}
/* 菜单选项 */
.content-menu{
    padding-bottom: 20rpx;
}
.content-menu,.content-menu .menu-top,.content-menu .menu-bottom{
    width: 100%;
    height: auto;
    overflow: hidden;
}
.content-menu .menu-top{
    margin-bottom: 10rpx;
}
.content-menu .menu-top .menu-top-left,.content-menu .menu-top .menu-top-right{
    width: 370rpx;
    height: 300rpx;
    float: left;
    background-color: #ffffff;
}
.content-menu .menu-top .menu-top-left{
    margin-right: 10rpx;
}
.content-menu .menu-top label{
    display: block;
    font-size: 32rpx;
    color: #FF6E61;
    padding: 30rpx 20rpx 0;
} 
.content-menu .menu-top image{
    width: 100%;
    height: 230rpx;
}
.content-menu .menu-bottom{
    text-align: center;
    padding: 20rpx 0;
    background-color: #ffffff;
}
.content-menu .menu-bottom .menu-bottom-li{
    width: 25%;
    height: 140rpx;
    border-left: 2rpx solid #f0f0f0;
    float: left;
    position: relative;
}
.content-menu .menu-bottom .menu-bottom-li:first-child{
    border: none;
}
.content-menu .menu-bottom .menu-bottom-li label{
    display: block;
    font-size: 28rpx;
    color: #333333;
}
.content-menu .menu-bottom .menu-bottom-li label text{
    font-size: 28rpx;
    color: #FF6E61;
}
.content-menu .menu-bottom .menu-bottom-li image{
    width: 148rpx;
    height: 84rpx;
    position: absolute;
    bottom: -20rpx;
    left: 20rpx;
}
/* 汽车推荐 */
.content-style{
    width: 100%;
    height: 390rpx;
}
.content-style .style-left,.content-style .style-right .style-right-li{
    background-color: #ffffff;
    border-radius: 10rpx;
    float: left;
}
.content-style .style-left{
    width: 370rpx;
    height: 390rpx;
    padding: 40rpx 20rpx;
    position: relative;
    margin-right: 10rpx;
}
.content-style .style-left label{
    font-size: 32rpx;
    color: #FF6E61;
}
.content-style .style-left image{
    width: 75%;
    height: 180rpx;
    position: absolute;
    bottom: 30rpx;
    left: 40rpx;
}
.content-style .style-right{
    overflow: hidden;
}
.content-style .style-right .style-right-li{
    width: 370rpx;
    height: 190rpx;
    position: relative;
}
.content-style .style-right .style-right-li:first-child{
    margin-bottom: 10rpx;
}
.content-style .style-right .style-right-li label{
    position: absolute;
    font-size: 32rpx;
    color: #FF6E61; 
    top: 40rpx;
    left: 24rpx;
}
.content-style .style-right .style-right-li image{
   position: absolute;
   top: 37rpx;
   right: 20rpx;
   width: 200rpx;
   height: 135rpx;
}

/* 每日精选 */
.content-day{
    padding-bottom: 20rpx;
}
.content-day .day-lable{
    width: 100%;
    height: auto;
    display: block;
    text-align: center;
    color: #333333;
    font-size: 32rpx;
    padding: 20px 0;
    position: relative;
}
.content-day .day-lable::after{
    position: absolute;
    top: 66rpx; 
    left: 115px;
    height: 4rpx;
    content: '';
    background-color: #FF6E61;
    width: 50rpx;
}
.content-day .day-lable::before{
    position: absolute;
    top: 66rpx; 
    right: 115px;
    height: 4rpx;
    content: '';
    background-color: #FF6E61;
    width: 50rpx;
}
.content-day .day-ul{
    width: 100%;
    height: auto;
    padding: 0 10rpx;
    overflow: hidden;
}
.content-day .day-ul .day-li{
    float: left;
    width: 360rpx;
    height: 392rpx;
    margin-bottom: 10rpx;
}
.content-day .day-ul .day-li:first-child,.content-day .day-ul .day-li:nth-child(3){
    margin-right: 10rpx;
}
.content-day .day-ul .day-li image{
    display: block;
    width: 360rpx;
    height: 240rpx;
}
.content-day .day-ul .day-li-text{
    width: 360rpx;
    height: 152rpx;
    background-color: #ffffff;
    border-bottom-left-radius: 10rpx; 
    border-bottom-right-radius: 10rpx;
    padding-left: 20rpx;
}
.content-day .day-ul .day-li-text .day-text-title{
    display: block;
    font-size: 30rpx;
    color: #333333;
    padding-top: 10rpx;
}
.content-day .day-ul .day-li-text .day-text-p{
    font-size: 24rpx;
    color: #999999;
    display: block;
    padding-top: 2rpx;
}
.content-day .day-ul .day-li-text .day-text-money{
    font-size: 34rpx;
    color: #FF6E61;
    display: block;
    padding-top: 10rpx 
}
.content-day .day-ul .day-li-text .day-text-money .money-p{
    font-size: 24rpx;
    color: #cccccc;
    margin-left: 30rpx;
    text-decoration: line-through;
}